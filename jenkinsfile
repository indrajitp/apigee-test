pipeline {
    agent any

    stages {
		stage('CheckOutSourceCode') {
            steps {
                git 'https://github.com/indrajitp/apigee-test.git'
            }
        }
        stage('Build') {
            steps {
               sh """
	       
		#USER_HOME=$JENKINS_HOME/workspace/todelete2/apiproxies/
		USER_HOME='/c/jnk/jenkins/workspace/todelete2/apiproxies'
		cd $JENKINS_HOME
		ls -ltr
		cd -
		#check commit differences  between two commits
		git diff HEAD^ HEAD| xargs > somefile
		echo "storing the changes in somefile"
		cat somefile
		
		"""
            }
        }
        stage('Code-Scan') {
            steps {
				sh """
                #apigeelint -s apiproxies/$service/apiproxy -f table.js
				#!/bin/sh
				apigeelint -s apiproxies/$service/apiproxy -f table.js
				cd apiproxies/$service
				echo '*********************************************************'
				echo '			Java Code Scan using JSLint					'
				echo '********************************************************* '
				jslint '**/*.js'
				"""
            }
        }
		stage('PerformanceTesting') {
            steps {
                echo 'Need to add code here for Jmeter testing, As of now Jmeter script is ready'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
